@{
    ViewData["Title"] = "Counters";
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showCounterModal('')">New Counter</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="CountersDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Code</th>
                        <th>Counter Name</th>
                        <th>Active</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="CounterModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/queue/counter.js" asp-append-version="true"></script>
}