@model WorkingHourModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.Code) ? "Edit" : "Add") Working Hour</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="workig-hour-frm">
                <input type="hidden" asp-for="Cd" />
                <input type="hidden" asp-for="FromDt" />
                <input type="hidden" asp-for="ToDt" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model.Code) ? "disabled-container" : "")">
                            <label asp-for="Code"></label>
                            <input asp-for="Code" class="form-control @(!string.IsNullOrEmpty(Model.Code) ? "disabled" : "")" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DateRange"></label>
                            <div class="input-group">
                                <input asp-for="DateRange" type="text" class="form-control daterangepicker-input">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="far fa-calendar-alt"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="DateRange" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DutyHrs"></label>
                            <input asp-for="DutyHrs" class="form-control decimal-input" />
                            <span asp-validation-for="DutyHrs" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HolTypCd"></label>
                            <select asp-for="HolTypCd" class="form-control select-picker" asp-items="ViewBag.DayTypeItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                            <span asp-validation-for="HolTypCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RelgTypCd"></label>
                            <select asp-for="RelgTypCd" class="form-control select-picker" asp-items="ViewBag.ReligionItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                            <span asp-validation-for="RelgTypCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveWorkingHour(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>