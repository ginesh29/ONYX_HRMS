@{
    ViewData["Title"] = "Approval Processes";
}
@model CompanyProcessApprovalModel
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="ProcessIdCd"></label>
                    <select id="ProcessIdCd-Filter" class="form-control filter-select-picker" asp-items="ViewBag.TypeItems" onchange="bindDocTypeByType(this)" data-index="1" data-target="ApplTypCd-Filter">
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="ApplTypCd"></label>
                    <select class="form-control filter-select-picker" asp-items="ViewBag.DocumentTypeItems" data-index="2" id="ApplTypCd-Filter">
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="BranchCd"></label>
                    <select asp-for="BranchCd" class="form-control filter-select-picker" asp-items="ViewBag.BranchItems" data-index="3">
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="DeptCd"></label>
                    <select asp-for="DeptCd" class="form-control filter-select-picker" asp-items="ViewBag.DepartmentItems" data-index="4">
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showApprovalProcessModal('','','','')">New Approval Process</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="ApprovalProcessesDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Sr. No</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Application</th>
                        <th>Type</th>
                        <th>Branch</th>
                        <th>Department</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="ApprovalProcessModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/organisation/approval-process.js" asp-append-version="true"></script>
}