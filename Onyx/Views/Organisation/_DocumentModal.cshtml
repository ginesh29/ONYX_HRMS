@model CompanyDocumentModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.DocTypCd) ? "Edit" : "Add") Document</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="document-frm">
                <input type="hidden" asp-for="Cd" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model.DocTypCd) ? "disabled-container" : "")">
                            <label asp-for="DocTypCd"></label>
                            <select asp-for="DocTypCd" class="form-control select-picker @(!string.IsNullOrEmpty(Model.DocTypCd) ? "disabled" : "")" asp-items="ViewBag.DocTypeItems" data-live-search="true">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                            <span asp-validation-for="DocTypCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model.DivCd) ? "disabled-container" : "")">
                            <label asp-for="DivCd"></label>
                            <select asp-for="DivCd" class="form-control select-picker @(!string.IsNullOrEmpty(Model.DivCd) ? "disabled" : "")" asp-items="ViewBag.BranchItems" data-live-search="true">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                            <span asp-validation-for="DivCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DocNo"></label>
                            <input asp-for="DocNo" class="form-control" />
                            <span asp-validation-for="DocNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IssueDt"></label>
                            <input asp-for="IssueDt" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#IssueDt">
                            <span asp-validation-for="IssueDt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IssuePlace"></label>
                            <input asp-for="IssuePlace" class="form-control" />
                            <span asp-validation-for="IssuePlace" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RefNo"></label>
                            <input asp-for="RefNo" class="form-control" type="text" />
                            <span asp-validation-for="RefNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RefDt"></label>
                            <input asp-for="RefDt" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#RefDt">
                            <span asp-validation-for="RefDt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExpDt"></label>
                            <input asp-for="ExpDt" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#ExpDt">
                            <span asp-validation-for="ExpDt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
