@{
    ViewData["Title"] = "Notifications";
}

<link href="~/plugins/tags-input/bootstrap-tagsinput.css" rel="stylesheet" />
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button class="btn btn-info" onclick="showNotificationModal('','')">New Notification</button>
        </div>
        <table class="table table-sm" id="NotificationsDataTable">
            <thead class="thead-dark">
                <tr>
                    <th width="50px">Sr #</th>
                    <th>Type</th>
                    <th>Doc. Type</th>
                    <th>Duration</th>
                    <th>Message</th>
                    <th width="90px"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="NotificationModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/plugins/tags-input/bootstrap-tagsinput.js"></script>
    <script src="~/js/page/notification.js" asp-append-version="true"></script>
}