@{
    ViewData["Title"] = SharedResource["Leave Pay Components"];
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button class="btn btn-info" onclick="showLeavePayComponentModal('')">New Leave Pay Component</button>
        </div>
        <table class="table table-sm" id="LeavePayComponentsDataTable">
            <thead class="thead-dark">
                <tr>
                    <th>No.</th>
                    <th>Leave Type</th>
                    <th>Pay Type</th>
                    <th>Pay Code</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="LeavePayComponentModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/organisation/leave-pay-component.js" asp-append-version="true"></script>
}