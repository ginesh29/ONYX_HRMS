@{
    ViewData["Title"] = SharedResource["Designations"];
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showDesignationModal('')">New Designation</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="DesignationsDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Code</th>
                        <th>Short Desc.</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="DesignationModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/organisation/designation.js" asp-append-version="true"></script>
}