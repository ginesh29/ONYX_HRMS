@model IEnumerable<CompanyEarnDed_GetRow_Result>
<div class="mb-3">
    <button class="btn btn-info" onclick="showComponentModal('')">New Component</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="ComponentsDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50">Code</th>
                <th>Type</th>
                <th>Amt/%</th>
                <th>Amt Value/%</th>
                <th>Comp. Type</th>
                <th>Abbr.</th>
                <th>Short Desc.</th>
                <th>Description</th>
                <th width="90px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Cd</td>
                <td>@item.value.TypeDesc</td>
                <td>@item.value.Perc_Amt</td>
                <td>@item.value.Perc_Val</td>
                <td>@item.value.TrnTyp</td>
                <td>@item.value.Abbr</td>
                <td>@item.value.SDes</td>
                <td>@item.value.Des</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showComponentModal('@item.value.Cd')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteComponent('@item.value.Cd','@item.value.TypeCd')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </table>
</div>
<div id="ComponentModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showComponentModal(cd) {
        var url = `/Organisation/GetComponent?cd=${cd}`;
        $('#ComponentModal').load(url, function () {
            parseDynamicForm();
            $(".select-picker").selectpicker();
            $('.percentage-input').attr("placeholder", "0 %");
            $('.percentage-input').inputmask(percentageMaskOptions);
            $("#ComponentModal").modal("show");
        });
    }
    function deleteComponent(cd, type) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/Organisation/DeleteComponent?cd=${cd}&type=${type}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveComponent(btn) {
        var frm = $("#component-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/Organisation/SaveComponent", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#ComponentModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#ComponentModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>