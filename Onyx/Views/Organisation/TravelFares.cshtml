@{
    ViewData["Title"] = SharedResource["Travel Fares"];
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showTravelFareModal('')">New Travel Fare</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="TravelFaresDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Sr No</th>
                        <th>Sector</th>
                        <th>Class</th>
                        <th>Short Des.</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Fare</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="TravelFareModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/organisation/travel-fare.js" asp-append-version="true"></script>
}