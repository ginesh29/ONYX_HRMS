@{
    ViewData["Title"] = "Documents";
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showDocumentModal('')">New Document</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="DocumentsDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Document Type</th>
                        <th>Branch</th>
                        <th>Document No</th>
                        <th>Issue Date</th>
                        <th>Issue Place</th>
                        <th>Expiry Date</th>
                        <th>Ref.No</th>
                        <th>Ref.Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="DocumentModal" class="modal fade" role="dialog" tabindex='-1'></div>
<div id="PreviewModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/organisation/document.js" asp-append-version="true"></script>
}