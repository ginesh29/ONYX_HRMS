@model IEnumerable<CompanyLoanTypes_GetRow>
<div class="mb-3">
    <button class="btn btn-info" onclick="showLoanTypeModal('')">New Loan Type</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="LoanTypesDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50">Code</th>
                <th>Pay Type</th>
                <th>Pay Comp.</th>
                <th>Ded. Type</th>
                <th>Ded. Comp.</th>
                <th>Abbr.</th>
                <th>Charges Type</th>
                <th>Interest %</th>
                <th>Short Desc.</th>
                <th>Description</th>
                <th width="90px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Cd</td>
                <td>@item.value.PayTyp</td>
                <td>@item.value.PayComp</td>
                <td>@item.value.DedTyp</td>
                <td>@item.value.DedComp</td>
                <td>@item.value.Abbr</td>
                <td>@item.value.ChgsTyp</td>
                <td>@item.value.IntPerc</td>
                <td>@item.value.Sdes</td>
                <td>@item.value.Des</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showLoanTypeModal('@item.value.Cd')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteLoanType('@item.value.Cd')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </table>
</div>
<div id="LoanTypeModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showLoanTypeModal(cd) {
        var url = `/Organisation/GetLoanType?cd=${cd}`;
        $('#LoanTypeModal').load(url, function () {
            parseDynamicForm();
            $('.percentage-input').attr("placeholder", "0 %");
            $('.percentage-input').inputmask(percentageMaskOptions);
            $("#LoanTypeModal").modal("show");
        });
    }
    function deleteLoanType(cd) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/Organisation/DeleteLoanType?cd=${cd}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveLoanType(btn) {
        var frm = $("#loan-type-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/Organisation/SaveLoanType", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#LoanTypeModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#LoanTypeModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>