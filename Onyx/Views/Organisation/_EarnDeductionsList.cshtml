@model IEnumerable<CompanyEarnDed_GetRow_Result>
<div class="mb-3">
    <button class="btn btn-info" onclick="showEarnDeductionModal('')">New Earn Deduction</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="EarnDeductionsDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50">Comp. Class</th>
                <th>Type</th>
                <th>Amt/%</th>
                <th>Amt Value/%</th>
                <th>Comp. Type</th>
                <th>Abbr.</th>
                <th>Short Desc.</th>
                <th>Description</th>
                <th>Loan Type</th>
                <th>OT</th>
                <th width="90px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Cd</td>
                <td>@item.value.TypeDesc</td>
                <td>@item.value.Perc_Amt</td>
                <td>@item.value.Perc_Val</td>
                <td>@item.value.TrnTyp</td>
                <td>@item.value.Abbr</td>
                <td>@item.value.SDes</td>
                <td>@item.value.Des</td>
                <td>@item.value.LoanTyp</td>
                <td>@item.value.OT</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showEarnDeductionModal('@item.value.Cd')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteEarnDeduction('@item.value.Cd')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </table>
</div>
<div id="EarnDeductionModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showEarnDeductionModal(cd) {
        var url = `/Settings/GetEarnDeduction?cd=${cd}`;
        $('#EarnDeductionModal').load(url, function () {
            parseDynamicForm();
            $("#EarnDeductionModal").modal("show");
        });
    }
    function deleteEarnDeduction(cd) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/settings/DeleteEarnDeduction?cd=${cd}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveEarnDeduction(btn) {
        var frm = $("#user-group-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/settings/SaveEarnDeduction", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#EarnDeductionModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#EarnDeductionModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>