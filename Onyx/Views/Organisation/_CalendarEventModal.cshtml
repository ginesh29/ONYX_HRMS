@model CompanyCalendarModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.Cd) ? "Edit" : "Add") Component</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="calendar-event-frm">
                <input type="hidden" asp-for="Code" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model.Cd) ? "disabled-container" : "")">
                            <label asp-for="Cd"></label>
                            <input asp-for="Cd" class="form-control @(!string.IsNullOrEmpty(Model.Cd) ? "disabled" : "")" />
                            <span asp-validation-for="Cd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Date"></label>
                            <input asp-for="Date" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#ExpiryDate">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MeetingLink"></label>
                    <textarea asp-for="MeetingLink" class="form-control"></textarea>
                    <span asp-validation-for="MeetingLink" class="text-danger"></span>
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" asp-for="Holiday">
                    <label asp-for="Holiday" class="custom-control-label font-weight-normal">Holiday</label>
                </div>
                <hr />
                <h5>Filter Employee by</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department</label>
                            <select id="Dept_Filter" class="form-control select-picker" asp-items="ViewBag.DepartmentItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Designation</label>
                            <select id="Designation_Filter" class="form-control select-picker" asp-items="ViewBag.DesignationItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Branch</label>
                            <select id="Dept_Filter" class="form-control select-picker" asp-items="ViewBag.BranchItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Emp. deploy Location</label>
                            <select id="Designation_Filter" class="form-control select-picker" asp-items="ViewBag.EmpDeployLocationItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                        </div>
                    </div>
                </div>
                <label>Meeting Attendees</label>
                <select asp-for="Attendees" class="form-control select-picker" asp-items="ViewBag.EmployeeItems" multiple data-selected-text-format="count > 1" data-actions-box="true" data-width="100%">
                </select>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveCalendarEvent(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>