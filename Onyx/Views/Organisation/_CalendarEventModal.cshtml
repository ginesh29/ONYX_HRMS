@model CompanyCalendarModel
@{
    string jsonString = Model.Attendees.JsonObjectToString();
}
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.Cd) ? "Edit" : "Add") Calendar Event</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="calendar-event-frm">
                <input type="hidden" asp-for="Code" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model.Cd) ? "disabled-container" : "")">
                            <label asp-for="Cd"></label>
                            <input asp-for="Cd" class="form-control @(!string.IsNullOrEmpty(Model.Cd) ? "disabled" : "")" value="@Model.Cd" />
                            <span asp-validation-for="Cd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Date"></label>
                            <input asp-for="Date" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#ExpiryDate">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" asp-for="Holiday">
                    <label asp-for="Holiday" class="custom-control-label font-weight-normal">Holiday</label>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="EmailSubject"></label>
                    <input asp-for="EmailSubject" class="form-control" type="text">
                    <span asp-validation-for="EmailSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MessageBody"></label>
                    <textarea asp-for="MessageBody" class="form-control"></textarea>
                    <span asp-validation-for="MessageBody" class="text-danger"></span>
                </div>
                <h5>Filter Employee by</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department</label>
                            <select id="Dept_Filter" class="form-control select-picker" asp-items="ViewBag.DepartmentItems" multiple data-selected-text-format="count > 1" data-actions-box="true" title="@CommonSetting.DEFAULTSELECT">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Designation</label>
                            <select id="Designation_Filter" class="form-control select-picker" asp-items="ViewBag.DesignationItems" multiple data-selected-text-format="count > 1" data-actions-box="true" title="@CommonSetting.DEFAULTSELECT">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Branch</label>
                            <select id="Branch_Filter" class="form-control select-picker" asp-items="ViewBag.BranchItems" multiple data-selected-text-format="count > 1" data-actions-box="true" title="@CommonSetting.DEFAULTSELECT">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Location</label>
                            <select id="Location_Filter" class="form-control select-picker" asp-items="ViewBag.EmpDeployLocationItems" multiple data-selected-text-format="count > 1" data-actions-box="true" title="@CommonSetting.DEFAULTSELECT">
                            </select>
                        </div>
                    </div>
                </div>
                <label>Meeting Attendees</label>
                <select asp-for="Attendees" class="form-control select-picker" multiple data-selected-text-format="count > 1" data-actions-box="true" data-width="100%" title="@CommonSetting.DEFAULTSELECT">
                </select>
                <span asp-validation-for="Attendees" class="text-danger"></span>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveCalendarEvent(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script>
    var attendeesValues = '@jsonString'.replace(/&quot;/g, '"');
    bindEmployeeDropdown('', '', '', '', function () {
        $('#Attendees').selectpicker('val', JSON.parse(attendeesValues));
    });
</script>