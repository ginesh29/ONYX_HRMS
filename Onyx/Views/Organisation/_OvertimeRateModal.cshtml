@model OvertimeRateModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.Type) ? "Edit" : "Add") Overtime Rate</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="overtime-rate-frm">
                <input type="hidden" asp-for="Cd" />
                <input type="hidden" asp-for="SrNo" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TypCd"></label>
                            <select asp-for="TypCd" class="form-control select-picker" asp-items="ViewBag.OtTypeItems">
                                
                            </select>
                            <span asp-validation-for="TypCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HolTypCd"></label>
                            <select asp-for="HolTypCd" class="form-control select-picker" asp-items="ViewBag.DayTypeItems">
                                
                            </select>
                            <span asp-validation-for="HolTypCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PayCode"></label>
                            <select asp-for="PayCode" class="form-control select-picker" asp-items="ViewBag.PayElementItems">
                                
                            </select>
                            <span asp-validation-for="PayCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Sdes"></label>
                            <input asp-for="Sdes" class="form-control" />
                            <span asp-validation-for="Sdes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Narr"></label>
                    <textarea asp-for="Narr" class="form-control"></textarea>
                    <span asp-validation-for="Narr" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Rate"></label>
                            <input asp-for="Rate" class="form-control decimal-input" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HrsApply"></label>
                            <input asp-for="HrsApply" class="form-control decimal-input" />
                            <span asp-validation-for="HrsApply" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveOvertimeRate(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>