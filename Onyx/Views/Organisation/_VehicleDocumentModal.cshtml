@model VehDocumentModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.VehCd) ? "Edit" : "Add") Vehicle Document</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="vehicle-document-frm">
                <input type="hidden" asp-for="Cd" />
                <input type="hidden" asp-for="VehCd" />
                <input type="hidden" asp-for="SrNo" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DocTypCd"></label>
                            <select asp-for="DocTypCd" class="form-control select-picker" asp-items="ViewBag.DocumentTypeItems">
                                <option value=''>@CommonSetting.DEFAULTSELECT</option>
                            </select>
                            <span asp-validation-for="DocTypCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DocNo"></label>
                            <input asp-for="DocNo" class="form-control" />
                            <span asp-validation-for="DocNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IssuePlace"></label>
                            <input asp-for="IssuePlace" class="form-control" />
                            <span asp-validation-for="IssuePlace" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IssueDt"></label>
                            <input asp-for="IssueDt" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#IssueDt" />
                            <span asp-validation-for="IssueDt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExpDt"></label>
                            <input asp-for="ExpDt" class="form-control datetimepicker-input date-input" type="text" data-toggle="datetimepicker" data-target="#ExpDt" />
                            <span asp-validation-for="ExpDt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Files</label>
                    <div class="file-drop-area">
                        <span class="choose-file-button" id="doc-file-label">Choose files</span>
                        <span class="file-message">or drag and drop files here</span>
                        <input asp-for="VehicleDocFiles" class="file-input" onchange="filesPreview(this)">
                    </div>
                    <span asp-validation-for="VehicleDocFiles" class="text-danger"></span>
                </div>
                <div id="Files-Preview"></div>
                <div id="VehicleDocList"></div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveVehicleDocument(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>