@model EmpTransferModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.EmpCd) ? "Edit" : "Add") Employee Transfer</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="emp-transfer-frm">
                <input type="hidden" asp-for="Cd" />
                <input type="hidden" asp-for="SrNo" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group @(!string.IsNullOrEmpty(Model?.EmpCd) ? "disabled-container" : "")">
                            <label asp-for="EmpCd"></label>
                            <select asp-for="EmpCd" class="form-control select2 @(!string.IsNullOrEmpty(Model?.EmpCd) ? "disabled" : "")" onchange="getEmpTransferEmployeeDetail('@Model.EmpCd')">
                                <option value="@Model.EmpCd">@Model.Name</option>
                            </select>
                            <span asp-validation-for="EmpCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TransferDt"></label>
                            <input asp-for="TransferDt" class="form-control date-input" type="text" />
                            <span asp-validation-for="TransferDt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 disabled-container">
                        <div class="form-group">
                            <label asp-for="DeptFrom"></label>
                            <select asp-for="DeptFrom" class="form-control select-picker disabled" asp-items="ViewBag.DepartmentItems">
                            </select>
                            <span asp-validation-for="DeptFrom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DeptTo"></label>
                            <select asp-for="DeptTo" class="form-control select-picker" asp-items="ViewBag.DepartmentItems">
                            </select>
                            <span asp-validation-for="DeptTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group disabled-container">
                            <label asp-for="LocFrom"></label>
                            <select asp-for="LocFrom" class="form-control select-picker disabled" asp-items="ViewBag.EmpDeployLocationItems">
                            </select>
                            <span asp-validation-for="LocFrom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LocTo"></label>
                            <select asp-for="LocTo" class="form-control select-picker" asp-items="ViewBag.EmpDeployLocationItems">
                            </select>
                            <span asp-validation-for="LocTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group disabled-container">
                            <label asp-for="BrFrom"></label>
                            <select asp-for="BrFrom" class="form-control select-picker disabled" asp-items="ViewBag.BranchItems">
                            </select>
                            <span asp-validation-for="BrFrom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BrTo"></label>
                            <select asp-for="BrTo" class="form-control select-picker" asp-items="ViewBag.BranchItems">
                            </select>
                            <span asp-validation-for="BrTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Narration"></label>
                    <textarea asp-for="Narration" class="form-control"></textarea>
                    <span asp-validation-for="Narration" class="text-danger"></span>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" id="btn-submit" class="btn btn-info" onclick="saveEmpTransfer(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>