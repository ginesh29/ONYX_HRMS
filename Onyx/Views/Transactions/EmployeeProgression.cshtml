@{
    ViewData["Title"] = SharedResource["Employee Progression"];
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showEmpProgressionModal('')">New Progression</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="EmployeeProgressionDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Trans. No.</th>
                        <th>Employee</th>
                        <th>Tran Dt</th>
                        <th>Progression Type</th>
                        <th>From Desg.</th>
                        <th>To Desg.</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<style>
    .tooltip-inner {
        max-width: 300px;
    }
</style>
@section scripts {
    <script src="~/js/page/transactions/emp-progression.js" asp-append-version="true"></script>
}