@{
    ViewData["Title"] = "Document Renewal";
    var typeItems = new List<SelectListItem>{
        new SelectListItem{Value="EMP",Text="Employee",Selected=true},
        new SelectListItem{Value="COM",Text="Company"},
        new SelectListItem{Value="VEH",Text="Vehicle"},
    };
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Type</label>
                    <div>
                        @foreach (var status in typeItems)
                        {
                            <label class="radio-inline mb-0">
                                <label class="custom-control custom-radio">
                                    <input type="radio" name="Type" class="custom-control-input custom-control-input-primary custom-control-input-outline" id="type_@status.Value" value="@status.Value" checked="@status.Selected" onchange="showHideTypeDropdown()">
                                    <label for="type_@status.Value" class="custom-control-label font-weight-normal">@status.Text</label>
                                </label>
                            </label>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Employee</label>
                    <select id="EmpCd" class="form-control select2">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Company</label>
                    <select class="form-control select-picker" id="Company" asp-items="ViewBag.CompanyItems">
                    </select>
                </div>
                <div class="form-group">
                    <label>Vehicle</label>
                    <select class="form-control select-picker" id="Vehicle" asp-items="ViewBag.VehicleItems">
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-sm d-none table" id="RenewalDocumentsSearchDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Doc. Type</th>
                        <th>Doc. No</th>
                        <th>Issue Date</th>
                        <th>Issue Place</th>
                        <th>Expiry Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="DocumentRenewModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/transactions/document-renewal.js" asp-append-version="true"></script>
    <script>
        bindEmployeeDropdown();
    </script>
} 