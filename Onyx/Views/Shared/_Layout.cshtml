@{
    var companyCd = User.Claims.FirstOrDefault(m => m.Type == "CompanyCd")?.Value;
    var isAdmin = User.Claims.FirstOrDefault(m => m.Type == "UserAbbr")?.Value.Contains("Admin");
    var localDateFormat = ExtensionMethod.GetDateFormat().ToUpper();
    ViewData["LocalDateFormat"] = localDateFormat;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_HeadImports" />
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/images/logo.png" alt="Logo" height="120px">
        </div>
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                </li>
            </ul>
            @await Component.InvokeAsync("UserMenu")
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/images/logo.png" alt="Logo" class="brand-image">
                <img src="~/images/small-logo.png" alt="Logo" class="collapse-brand-image">
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @await Component.InvokeAsync("LeftNav")
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 233.4px;">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"] <i class="fas fa-spinner fa-spin d-none" id="page-loader"></i></h1>
                        </div><!-- /.col -->
                        @if (ViewData["Title"]?.ToString() != "Home")
                        {
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    @if (ViewData["AdditionLinkWithTitle"] != null)
                                    {
                                        var additionalLink = ViewData["AdditionLinkWithTitle"].ToString().Split("_");
                                        <li class="breadcrumb-item"><a href="@additionalLink[1]">@additionalLink[0]</a></li>
                                    }
                                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                                </ol>
                            </div>
                        }
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    <input type="hidden" id="LocalDateFormat" value="@localDateFormat" />
                    <input type="hidden" id="CoCd" value="@companyCd" />
                    <input type="hidden" id="IsAdmin" value="@(isAdmin==true ? 1 :0)" />
                    @RenderBody()
                </div>
            </section>
        </div>
        <div id="ChangePasswordModal" class="modal fade" role="dialog" tabindex='-1'></div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            Copyright &copy; @DateTime.UtcNow.Year Onyx Designed & Developed By  <strong><a href="http://www.luminosofttechnologies.com/" target="_blank">Luminosoft Technologies</a>.</strong>
            All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <partial name="_Notification" />
    <partial name="_ScriptImports" />
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>