@{
    ViewData["Title"] = "Employee Short List Report";
}
@model EmpShortListFilterModel
<div class="card">
    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="EmpCd"></label>
                        <select asp-for="EmpCd" class="form-control select2" data-placeholder="@CommonSetting.ALLSELECT">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Branch"></label>
                        <select class="form-control filter-select-picker" asp-for="Branch" asp-items="ViewBag.BranchItems"></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Department"></label>
                        <select asp-for="Department" class="form-control filter-select-picker" asp-items="ViewBag.DepartmentItems"></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Designation"></label>
                        <select asp-for="Designation" class="form-control filter-select-picker" asp-items="ViewBag.DesignationItems"></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Sponsor"></label>
                        <select asp-for="Sponsor" class="form-control filter-select-picker" asp-items="ViewBag.SponsorItems"></select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Period"></label>
                        <input asp-for="Period" value="@ViewBag.currentMonthYear" class="form-control month-year-input" type="text" data-toggle="datetimepicker">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Nationality"></label>
                        <select asp-for="Nationality" class="form-control filter-select-picker" asp-items="ViewBag.NationalityItems">
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Age"></label>
                        <select class="form-control filter-select-picker" asp-for="Age">
                            @for (int i = 18; i < 65; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Qualification"></label>
                        <select asp-for="Qualification" class="form-control filter-select-picker" asp-items="ViewBag.QualificationItems"></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="EmployeeType"></label>
                        <select asp-for="EmployeeType" class="form-control filter-select-picker" asp-items="ViewBag.EmpTypeItems"></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control filter-select-picker" asp-items="ViewBag.StatusItems"></select>
                    </div>
                </div>

                @* <div>
                <label>Visible Column:</label>
                <div class="input-group">
                <select class="form-control select-picker" multiple>
                <option>1</option>
                <option>2</option>
                </select>
                <button class="btn btn-secondary ml-2" onclick="filterShowCustomerTransactions(this)">Search</button>
                </div>
                <!-- /.input group -->
                </div> *@
            </div>
            <div class="col-md-1">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" asp-for="Active">
                    <label asp-for="Active" class="custom-control-label font-weight-normal">Active</label>
                </div>
            </div>
            <div class="report-btn-div">
                <button class="btn btn-secondary" onclick="filterShowReport(this)">Search</button>
                <button class="btn btn-outline-danger ml-2 d-none" onclick="filterShowReport(this,true)" id="btn-pdf"><i class="fa fa-file-pdf"></i></button>
                <button class="btn btn-outline-info ml-2 d-none" id="btn-excel"><i class="fa fa-file-excel"></i></button>
            </div>
        </form>
        <hr />
        <div id="EmpShortList"></div>
    </div>
</div>
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        function loadGridData(btn) {
            loadingButton(btn);
            var frm = $("#filter-frm").serialize();
            var url = `/Reports/FetchEmpShortListData?${frm}`;
            $('#EmpShortList').load(url, function () {
                unloadingButton(btn);
                window["datatable"] = $('#EmpShortListReportTable').DataTable(dataTableDefaultOptions);
                if (window["datatable"].data().any())
                    $("#btn-pdf,#btn-excel").removeClass("d-none");
            });
        }
        function filterShowReport(btn, report) {
            loadGridData(btn);
            if (report) {
                debugger
                var frm = $("#filter-frm").serialize();
                var url = `/Reports/EmpShortListReport?${frm}`;
                window.open(url);
            }
        }
    </script>
}