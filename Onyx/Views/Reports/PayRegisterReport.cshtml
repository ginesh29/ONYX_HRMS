@model dynamic
@{
    ViewData["Title"] = "Pay Register Report";
    var type = Context.Request.Query["Type"];
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_HeadImports" />
</head>
<body>
    <h3 class="text-center mb-3">Pay Register Report</h3>
    <h6 class="text-right"><span class="font-weight-bold">Print Date & Time:</span> @DateTime.Now</h6>
    @if (type == "Detail")
    {
        <partial name="_PayRegisterDetail" model="Model" />
    }
    else if (type == "Summary")
    {
        <partial name="_PayRegisterSummary" model="Model" />
    }
    else
    {
        <partial name="_PayRegisterFormat1" model="Model" />
    }    
</body>
</html>