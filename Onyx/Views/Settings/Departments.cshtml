@{
    ViewData["Title"] = "Departments";
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showDepartmentModal('')">New Department</button>
        </div>
        <div class="table-responsive">
            <table class="table-sm table" id="DepartmentsDataTable">
                <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="DepartmentModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/settings/department.js" asp-append-version="true"></script>
}