@model IEnumerable<Branch_GetRow_Result>
<link href="~/plugins/jstree/jstree.bundle.css" rel="stylesheet" />
<div class="mb-3">
    <button class="btn btn-info" onclick="showBranchModal('')">New Branch</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="BranchesDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50px">Code</th>
                <th>Name</th>
                <th width="150px">Description</th>
                <th width="80px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Cd</td>
                <td>@item.value.Des</td>
                <td>@item.value.SDes</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showBranchModal('@item.value.Cd')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteBranch('@item.value.Cd')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tfoot>
                <tr>
                    <td colspan="14">No record found</td>
                </tr>
            </tfoot>
        }
    </table>
</div>
<div id="BranchModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showBranchModal(cd) {
        var url = `/Settings/GetBranch?cd=${cd}`;
        $('#BranchModal').load(url, function () {
            parseDynamicForm();           
            $("#BranchModal").modal("show");
        });
    }
    function deleteBranch(cd) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/settings/DeleteBranch?cd=${cd}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveBranch(btn) {
        var frm = $("#user-group-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/settings/SaveBranch", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#BranchModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#BranchModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>