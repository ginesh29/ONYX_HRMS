@model IEnumerable<UserGroupModel>
<link href="~/plugins/jstree/jstree.bundle.css" rel="stylesheet" />
<div class="mb-3">
    <button class="btn btn-info" onclick="showUserGroupModal('')">New User Group</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="UserGroupsDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50px">Code</th>
                <th>Description</th>
                <th width="150px">View All Employees</th>
                <th width="80px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Cd</td>
                <td>@item.value.Des</td>
                <td>@item.value.ViewAllEmp</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showUserGroupModal('@item.value.Cd')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteUserGroup('@item.value.Cd')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tfoot>
                <tr>
                    <td colspan="14">No record found</td>
                </tr>
            </tfoot>
        }
    </table>
</div>
<div id="UserGroupModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showUserGroupModal(cd) {
        var url = `/Settings/GetUserGroup?cd=${cd}`;
        $('#UserGroupModal').load(url, function () {
            parseDynamicForm();           
            $("#UserGroupModal").modal("show");
        });
    }
    function deleteUserGroup(cd) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/settings/DeleteUserGroup?cd=${cd}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveUserGroup(btn) {
        var frm = $("#user-group-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/settings/SaveUserGroup", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#UserGroupModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#UserGroupModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>