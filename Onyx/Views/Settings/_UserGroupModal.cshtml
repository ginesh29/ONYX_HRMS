@model UserGroupModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model?.Cd) ? "Edit" : "Add") User Group</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="user-group-frm">
                <div class="form-group @(!string.IsNullOrEmpty(Model?.Cd) ? "disabled-container" : "")">
                    <label asp-for="Cd"></label>
                    <input asp-for="Cd" class="form-control" />
                    <span asp-validation-for="Cd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Des"></label>
                    <input asp-for="Des" class="form-control" />
                    <span asp-validation-for="Des" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsViewAllEmp" class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" id="ViewAllEmp" checked="@(Model.ViewAllEmp=="Y")">
                        <label for="ViewAllEmp" class="custom-control-label font-weight-normal">View All Employees</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveUserGroup(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>