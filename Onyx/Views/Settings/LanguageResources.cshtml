@{
    ViewData["Title"] = "Language Resources";
}
<div class="card">
    <div class="card-body">        
        <form id="import-frm">
            <div class="row">
                <div class="col-md-4">
                    <label>Import File</label>
                    <div class="custom-file">
                        <input type="file" id="import-file" name="file" onchange="uploadFile(event)" class="custom-file-input">
                        <label class="custom-file-label" id="image-file-label" for="import-file">Choose file</label>
                    </div>
                    <a href="/formats/Language_Resource_Import_Sample.xlsx?@DateTime.Now">Download Sample File</a>
                </div>
            </div>
            <div id="excel-import-data"></div>
        </form>
        <hr />
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showLanguageResourceModal('')">New Language Resource</button>
        </div>
        <table class="table-sm table" id="LanguageResourceTable">
            <thead class="thead-dark">
                <tr>
                    <th>No.</th>
                    <th>English</th>
                    <th>Arabic</th>
                    <th>Persian</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="LanguageResourceModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/settings/language-resource.js" asp-append-version="true"></script>
}