@model IEnumerable<Dept_GetRow_Result>
<div class="mb-3">
    <button class="btn btn-info" onclick="showDepartmentModal('')">New Department</button>
</div>
<div class="table-responsive">
    <table class="table table-sm" id="DepartmentsDataTable">
        <thead class="thead-dark">
            <tr>
                <th width="5px">No.</th>
                <th width="50px">Code</th>
                <th>Name</th>
                <th>Description</th>
                <th width="90px"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <tr>
                <td class="text-right">@(item.i + 1).</td>
                <td>@item.value.Code</td>
                <td>@item.value.Department</td>
                <td>@item.value.Description</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showDepartmentModal('@item.value.Code')"><i class="fas fa-pen"></i></button>
                    <button class="btn btn-sm btn-danger ml-2" onclick="deleteDepartment('@item.value.Code')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tfoot>
                <tr>
                    <td colspan="14">No record found</td>
                </tr>
            </tfoot>
        }
    </table>
</div>
<div id="DepartmentModal" class="modal fade" role="dialog" tabindex='-1'></div>
<script>
    function showDepartmentModal(cd) {
        var url = `/Settings/GetDepartment?cd=${cd}`;
        $('#DepartmentModal').load(url, function () {
            parseDynamicForm();           
            $("#DepartmentModal").modal("show");
        });
    }
    function deleteDepartment(cd) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to Delete?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                deleteAjax(`/settings/DeleteDepartment?cd=${cd}`, function (response) {
                    showSuccessToastr(response.message);
                    reloadPageAfterSometime();
                });
            }
        });
    }
    function saveDepartment(btn) {
        var frm = $("#dept-frm");
        if (frm.valid()) {
            loadingButton(btn);
            postAjax("/settings/SaveDepartment", frm.serialize(), function (response) {
                if (response.success) {
                    showSuccessToastr(response.message);
                    $("#DepartmentModal").modal("hide");
                    reloadPageAfterSometime();
                }
                else {
                    showErrorToastr(response.message);
                    $("#DepartmentModal").modal("hide");
                }
                unloadingButton(btn);
            });
        }
    }
</script>