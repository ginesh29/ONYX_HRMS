@{
    ViewData["Title"] = SharedResource["Countries"];
}
<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <button id="btn-add" class="btn btn-info" onclick="showCountryModal('')">New Country</button>
        </div>
        <table class="table table-sm" id="CountriesDataTable">
            <thead class="thead-dark">
                <tr>
                    <th>No.</th>
                    <th>Code</th>
                    <th>Short Desc.</th>
                    <th>Description</th>
                    <th>Nationality</th>
                    <th>Region</th>
                    <th>Provisions</th>
                    <th width="90px"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="CountryModal" class="modal fade" role="dialog" tabindex='-1'></div>
@section scripts {
    <script src="~/js/page/settings/country.js" asp-append-version="true"></script>
}