@model EmpQualificationModel
<div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@(!string.IsNullOrEmpty(Model.EmpCd) ? "Edit" : "Add") Education</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="education-frm">
                <input type="hidden" asp-for="EmpCd" />
                <input type="hidden" asp-for="SrNo" value="@Model.SrNo" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QualCd"></label>
                            <select asp-for="QualCd" class="form-control select-picker" asp-items="ViewBag.QualificationItems">
                            </select>
                            <span asp-validation-for="QualCd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PassingYear"></label>
                            <select asp-for="PassingYear" class="form-control select-picker" asp-items="ViewBag.PassingYearItems">
                            </select>
                            <span asp-validation-for="PassingYear" class="text-danger"></span>
                        </div>
                    </div>
                </div>              
                <div class="form-group">
                    <label asp-for="University"></label>
                    <input asp-for="University" class="form-control" />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MarksGrade"></label>
                            <input asp-for="MarksGrade" class="form-control" />
                            <span asp-validation-for="MarksGrade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CountryCd"></label>
                            <select asp-for="CountryCd" class="form-control select-picker" asp-items="ViewBag.CountryItems">
                            </select>
                            <span asp-validation-for="CountryCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info" onclick="saveEducation(this)">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>