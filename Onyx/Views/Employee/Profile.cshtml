@{
    ViewData["Title"] = "Employee Profile";
    string[] sections = { "Personal Detail", "Official Detail", "Education Detail", "Experience Detail", "Documents", "Earnings & Deductions", "Addresses" };
}
<link rel="stylesheet" href="~/plugins/bs-stepper/css/bs-stepper.min.css">
<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-body p-0">
                <div class="bs-stepper">
                    <div class="bs-stepper-header" role="tablist">
                        @foreach (var item in sections.Select((value, i) => new { i, value }))
                        {
                            <div class="step" data-target="#@item.value.ConvertToSlug()-part">
                                <button type="button" class="step-trigger" role="tab" aria-controls="@item.value.ConvertToSlug()-part" id="@item.value.ConvertToSlug()-trigger">
                                    <span class="bs-stepper-circle">@(item.i + 1)</span>
                                    <span class="bs-stepper-label">@item.value</span>
                                </button>
                            </div>
                        }
                    </div>
                    <div class="bs-stepper-content">
                        @foreach (var item in sections.Select((value, i) => new { i, value }))
                        {
                            <div id="@item.value.ConvertToSlug()-part" class="content" role="tabpanel" aria-labelledby="@item.value.ConvertToSlug()-part-trigger">
                                @if (item.value.Contains("Personal"))
                                {
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                                    </div>
                                    <button class="btn btn-primary" onclick="stepper.previous()">Prev</button>
                                    <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
@section scripts {
    <script src="~/plugins/bs-stepper/js/bs-stepper.min.js"></script>
    <script>
        var stepper = new Stepper($('.bs-stepper')[0])
    </script>
}